@model List<Project.Models.StudentMaster>

<style>
    h1 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        font-size: 14px;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

<h1>Students Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>State Name</th>
            <th>City Name</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.StudentFName</td>
                <td>@student.StudentMName</td>
                <td>@student.StudentLName</td>
                <td>Maharashtra</td>
                <td>Pune</td>
                <td>@student.Gender</td>
            </tr>
        }
    </tbody>
</table>
